@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.NewsOverview>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    /**/

    Layout = "Master.cshtml";
    @*List of all news*@
    var ListOfNews = CurrentPage.Children();
}

<div class="container-fluid">
    <div class="container">
        <h1>@CurrentPage.Name</h1>
        @CurrentPage.newsOverviewBodyText

        @*Display the list of news using a panel*@
        @foreach (var news in ListOfNews)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="@news.Url"><h3 class="panel-title">@news.Name</h3></a>
                </div>
                <div class="panel-body">
                    @Umbraco.Truncate(news.newsText, 200)
                </div>
            </div>
        }
    </div>
</div>